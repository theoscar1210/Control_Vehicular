#------------------------------------------------------------------------------
# CONFIGURACIÓN DE APLICACIÓN - Control Vehicular
#------------------------------------------------------------------------------
APP_NAME="Control Vehicular"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Bogota
APP_URL=http://localhost

# Configuración de idioma (Colombia)
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CO

# Modo mantenimiento
APP_MAINTENANCE_DRIVER=file

#------------------------------------------------------------------------------
# SERVIDOR PHP
#------------------------------------------------------------------------------
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

#------------------------------------------------------------------------------
# LOGS
#------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#------------------------------------------------------------------------------
# BASE DE DATOS - MySQL
#------------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=control_vehicular
DB_USERNAME=root
DB_PASSWORD=

#------------------------------------------------------------------------------
# SESIONES Y CACHE
#------------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

#------------------------------------------------------------------------------
# REDIS (Opcional - para cache/colas en producción)
#------------------------------------------------------------------------------
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

#------------------------------------------------------------------------------
# CORREO ELECTRÓNICO - Alertas Semanales
#------------------------------------------------------------------------------
# Para desarrollo (log)
MAIL_MAILER=log

# Para producción (SMTP) - Descomentar y configurar:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=tu-correo@gmail.com
# MAIL_PASSWORD=tu-app-password
# MAIL_ENCRYPTION=tls

MAIL_FROM_ADDRESS="alertas@control-vehicular.com"
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# SANCTUM - Autenticación API
#------------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

#------------------------------------------------------------------------------
# GOOGLE DRIVE - Almacenamiento de documentos
#------------------------------------------------------------------------------
# ID de la carpeta raíz en Google Drive donde se almacenarán los documentos
GOOGLE_DRIVE_FOLDER_ID=
# Ruta al archivo JSON de credenciales de la Service Account
GOOGLE_DRIVE_CREDENTIALS_PATH=google-drive-credentials.json
# Email del usuario de Google Workspace para Domain-Wide Delegation
# (dejar vacío hasta tener Google Workspace habilitado)
GOOGLE_DRIVE_IMPERSONATE_EMAIL=

#------------------------------------------------------------------------------
# VITE
#------------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

